<% layout('layout/boilerplate') %>
    <div class="container d-flex justify-content-center align-items-center mb-auto mt-auto">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
                        alt="" class="card-img-top" />
                    <div class="card-body py-5 px-4">
                        <h1 class="card-title">Register!</h1>
                        <form action="/register" method="POST" class="needs-validation" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="username">Username</label>
                                <div class="input-group has-validation">
                                    <input class="form-control" type="text" id="username" name="username" required autofocus>
                                    <div class="invalid-feedback">Please provide valid username!</div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="email">email</label>
                                <div class="input-group has-validation">
                                    <input class="form-control" typpassword" id="email" name="email" required>
                                    <div class="invalid-feedback">Please provide valid email!</div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="password">password</label>
                                <div class="input-group has-validation">
                                    <input class="form-control" type="password" id="password" name="password" required>
                                    <div class="invalid-feedback">Please provide valid password!</div>
                                </div>
                            </div>
                            <button class="btn btn-success btn-block">Register</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>